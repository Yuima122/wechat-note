/* pages/activity-detail/index.wxss */
page {
    width: 100%;
    height: 100%;
}
.container {
    width: 100%;
    min-height:100%;
    background-color: #f6f6f6;
    padding-bottom: 200rpx;
}
.activity-info-container{
    position: relative;
    width: 100%;
    top: 0;
    display: flex;
    justify-content: center;
}
.text-contaniner{
    position: relative;
    width: 656rpx;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    color: #a4a4a4;
    padding: 170rpx 0 80rpx 0;
}
.name {
    position: absolute;
    top: 22rpx;
    left: 48rpx;
    width: 662rpx;
    font-family: PingFang SC;
    font-size: 48rpx;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.75);
}
.createdTime {
    position: absolute;
    bottom: 0rpx;
    left: 48rpx;
    width: 250rpx;
    height: 52rpx;
    font-family: SFCompactDisplay;
    font-size: 36rpx;
    font-weight: 500;
    color: #a4a4a4;
}
.type{
    position: absolute;
    bottom: 0;
    right: 154rpx;
    width: 120rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    background-color: #8667ff;
    ont-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: #ffffff;
}
.frequency {
    position: absolute;
    bottom: 0;
    right: 28rpx;
    width: 120rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    background-color: #8667ff;
    ont-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: #ffffff;
}
.line {
    position: relative;
    width: 692rpx;
    height: 8rpx;
    border-radius: 4rpx;
    box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, 0.08);
    background-color: #ffffff;
    margin: 44rpx 0;
}
.black-container{
    position: relative;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 268rpx;
    margin-top: 44rpx;
}
.black-pic{
    position: absolute;
    top: 0;
    width: 216rpx;
    height: 186rpx;
}
.black-text{
    position: absolute;
    bottom: 0;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: 500;
    color: #a4a4a4;
}
.black-message-btn{
    position: relative;
    display: flex;
    align-items: center;
    top: 100rpx;
    width: 536rpx;
    height: 96rpx;
    border-radius: 10rpx;
    box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.15), 0 50rpx 36rpx 0 rgba(0, 0, 0, 0.02);
    background-color: #8668ff;
}
.black-btn-icon {
    position: absolute;
    left: 176rpx;
    width: 32rpx;
    height: 32.2rpx;
}
.black-btn-text {
    position: absolute;
    left: 214rpx;
    width: 158rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
}
.message-btn{
    position: fixed;
    right: 52rpx;
    bottom: 62rpx;
    width: 116rpx;
    height: 116rpx;
    box-shadow: 0 8rpx 24rpx 0 rgba(0, 0, 0, 0.15);
    background-color: #8668ff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.btn-icon {
    width: 52rpx;
    height: 52rpx;
}
.messages{
    position: relative;
}
.check-toast{
    position: fixed;
    animation: toastAnimation 0.5s;
    animation-fill-mode: forwards;
}
@keyframes toastAnimation {
    from {
        bottom: 0;
        opacity: 0;
    }
    to {
        bottom: 60rpx;
        opacity: 1;
    }
}