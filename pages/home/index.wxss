/* pages/home/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.container {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: #fdd32a;
}
.date{
    position: absolute;
    top: 70rpx;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.day{
    height: 135rpx;
    font-family: LibreBaskerville;
    font-size: 128rpx;
    font-weight: bold;
    color: #06070c;
}
.month{
    font-family: LibreBaskerville;
    font-size: 48rpx;
    font-weight: bold;
    color: #06070c;
}
.create-btn{
    position: absolute;
    top: 980rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 436rpx;
    height: 96rpx;
    border-radius: 16rpx;
    box-shadow: 0 16rpx 36rpx 0 rgba(214, 86, 46, 0.2);
    background-color: #ffffff;
}
.create-text{
    font-family: PingFang SC;
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
    color: rgba(0, 0, 0, 0.75);
}
