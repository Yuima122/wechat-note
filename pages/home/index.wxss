/* pages/home/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.container {
    display: flex;
    width: 100%;
    min-height: 100%;
    background-color: #fdd32a;
    padding: 200rpx 0 300rpx 0;
}
.date{
    position: absolute;
    top: 38rpx;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.day{
    height: 135rpx;
    font-family: LibreBaskerville;
    font-size: 128rpx;
    font-weight: bold;
    color: #06070c;
}
.month{
    font-family: LibreBaskerville;
    font-size: 48rpx;
    font-weight: bold;
    color: #06070c;
}
.create-btn{
    position: absolute;
    top: 980rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 536rpx;
    height: 96rpx;
    border-radius: 16rpx;
    box-shadow: 0 16rpx 36rpx 0 rgba(214, 86, 46, 0.2);
    background-color: #8668ff;
}
.create-text{
    font-family: PingFang SC;
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
    color: #ffffff;
}
.activity-card-container{
    position: relative;
    top: 90rpx;
}
.delete-toast-position{
    position: fixed;
    animation: toastAnimation 0.5s;
    animation-fill-mode: forwards;
}
@keyframes toastAnimation {
    from {
        bottom: 0;
        opacity: 0;
    }
    to {
        bottom: 60rpx;
        opacity: 1;
    }
}
.black-icon{
    position: absolute;
    top: 376rpx;
    width: 668rpx;
    height: 492rpx;
}
.black-container{
    width: 100%;
    display: flex;
    justify-content: center;
}
.create-icn-container{
    position: fixed;
    width: 116rpx;
    height: 116rpx;
    box-shadow: 0 16rpx 36rpx 0 rgba(214, 86, 46, 0.2);
    background-color: #8668ff;
    border-radius: 50%;
    right: 52rpx;
    bottom: 52rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.create-icon {
    width: 56rpx;
    height: 56rpx;
}
.black-text{
    position: absolute;
    top: 1100rpx;
    font-size: 24rpx;
    color: rgba(0, 0, 0, 0.55);
}