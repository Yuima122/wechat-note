<view class="container" catchtap="closeMenu">
    <view class="date">
        <view class="day">
            {{day}}
        </view>
        <view class="month">
            {{month}}
        </view>
    </view>
    <!--如果用户拥有活动，则显示对应的卡片-->
    <view class="activity-card-container">
        <view wx:for="{{activities}}" wx:key="{{item}}">
            <activity-card name="{{item.name}}" checked="{{item.checked}}" frequency="{{item.frequency}}"
                           groupsUrl="{{item.groupsUrl}}" index="{{index}}" menuShow="{{menuShow}}"
                           showIndex="{{showIndex}}"
                           data-index="{{index}}"
                           bind:checkActivity="checkActivity"
                           bind:showMenu="showMenu"
                           bind:delete="detele"></activity-card>
        </view>
    </view>
    <button class="create-btn" bindtap="create" wx:if="{{firstCreate}}">
        <text class="create-text">创建第一个活动</text>
    </button>
    <!--删除活动后的toast-->
    <delete-toast wx:if="{{showDeleteToast}}" class="delete-toast-position"></delete-toast>
</view>