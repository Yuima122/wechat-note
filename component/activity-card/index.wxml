<view class="container">
    <view class="checkbox-container" bindtap="checkActivity">
        <view class="check" wx:if="{{!checked}}">
            <text>关注</text>
        </view>
        <view class="checked" wx:else>
            <text>已关注</text>
        </view>
    </view>
    <view class="name-container">
        <text>{{activity.name}}</text>
    </view>
    <view class="type-container">
        <text>{{activity.type}}</text>
    </view>
    <view class="frequency-container" wx:if="{{activity.type === '招聘信息'}}">
        <text>{{activity.frequency}}</text>
    </view>
    <view class="type-icon-container">
        <image src="../../assets/1.png" class="type-icon" wx:if="{{activity.type === '招聘信息'}}"></image>
        <image src="../../assets/2.png" class="type-icon" wx:elif="{{activity.type === '面试经验'}}"></image>
        <image src="../../assets/3.png" class="type-icon" wx:else="{{activity.type === '心得体会'}}"></image>
    </view>
    <view class="groups-container">
        <view wx:for="{{activity.groups.urls}}" wx:key="{{item}}">
            <image src="{{item}}" class="profile"></image>
            <text class="group-name">{{activity.groups.names[index]}}</text>
        </view>
    </view>
    <view class="menu-container" catchtap="showMenu">
        <image class="menu" src="../../assets/menu.png"></image>
    </view>
    <pop-over activityId="{{activityId}}" createrId="{{activity.createrId}}"
              wx:if="{{menuShow && showIndex === index}}"
              bind:delete="delete" class="pop-over-position"
              bind:closeMenu="closeMenu"></pop-over>
</view>