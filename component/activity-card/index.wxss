/* component/activity-card/index.wxss */
.container{
    position: relative;
    width: 670rpx;
    height: 288rpx;
    border-radius: 16rpx;
    box-shadow: 0 16rpx 36rpx 0 rgba(214, 86, 46, 0.2);
    background-color: #ffffff;
    margin-bottom: 60rpx;
}
.checkbox-container{
    position: absolute;
    right: 0;
    top: 0;
    width: 176rpx;
    height: 102rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.check{
    width: 92rpx;
    height: 38rpx;
    border-radius: 8rpx;
    background-color: #8667ff;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.checked{
    width: 92rpx;
    height: 38rpx;
    border-radius: 8rpx;
    background-color: rgba(64, 64, 64, 0.2);
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.name-container{
    position: absolute;
    width: 420rpx;
    top: 30rpx;
    left: 116rpx;
    font-family: PingFang SC;
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(0, 0, 0, 0.75);
}
.frequency-container{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 134rpx;
    left: 252rpx;
    width: 120rpx;
    height: 48rpx;
    border-radius: 10rpx;
    background-color: #fff6d4;
    font-family: SFCompactDisplay;
    font-size: 24rpx;
    font-weight: 600;
    color: #f5ad2d;
}
.groups-container{
    position: absolute;
    display: flex;
    top: 206rpx;
    left: 30rpx;
}
.profile{
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}
.invite-icon{
    width: 56rpx;
    height: 56rpx;
}
.menu-container{
    position: absolute;
    display: flex;
    justify-content: center;
    width: 86rpx;
    height: 78rpx;
    top: 218rpx;
    right: 8rpx;
}
.menu{
    width: 8rpx;
    height: 40rpx;
}
.pop-over-position{
    position: absolute;
    top: 216rpx;
    right: 86rpx;
    z-index: 999;
    animation: fade 0.5s;
}
@keyframes fade {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
.special-day-container{
    position: relative;
    width: 670rpx;
    height: 106rpx;
    border-bottom-left-radius: 80rpx;
    border-bottom-right-radius: 16rpx;
    box-shadow: 0 8px 18px 0 rgba(214, 86, 46, 0.2);
    background-image: linear-gradient(to top, #b57bff, #8668ff);
    bottom: 70rpx;
}
.special-text{
    position: absolute;
    top: 30rpx;
    left: 114rpx;
    width: 368rpx;
    height: 58rpx;
    font-family: PingFang SC;
    font-size: 36rpx;
    font-weight: bold;
    color: #ffffff;
}
.special-icon{
    position: absolute;
    top: 44rpx;
    left: 602rpx;
    width: 24rpx;
    height: 22rpx;
}
.type-icon-container{
    position: absolute;
    top: 34rpx;
    left: 30rpx;
}
.type-icon{
    width: 56rpx;
    height: 56rpx;
    opacity: 0.5;
}
.type-container{
    position: absolute;
    top: 134rpx;
    left: 116rpx;
    width: 120rpx;
    height: 48rpx;
    border-radius: 10rpx;
    background-color: #fff6d4;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: #f5ad2d;
}
.group-name{
    position: relative;
    bottom: 18rpx;
    left: 8rpx;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: bold;
    color: rgba(64, 64, 64, 0.5);
}