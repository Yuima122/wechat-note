    background-color: #44403f;
}
.toast-text{
    position: absolute;
    display: flex;
    align-items: center;
    top: 12rpx;
    left: 20rpx;
    width: 360rpx;
    height: 96rpx;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: bold;
    color: #ffffff;
}
.check-text{
